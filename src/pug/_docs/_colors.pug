  .grid-container.full
    .grid-x
      .cell.grid-x.d-color-group
        h6.cell 
          | Primary Colors
          hr.d-hr
        .cell.grid-x.small-up-3.medium-up-4.large-up-8.grid-margin-x.grid-margin-y
          each colorSet in documentColors["Primary Colors"]
            each hexCode,color  in colorSet
              .cell.d-color-box
                .d-color-box__color(class="bg-"+color)
                p.d-color-box__name #{color}
                small.d-color-box__code.c-anchor-light-30 #{hexCode}
    .grid-x
      each colors, name in documentColors
        if name != "Primary Colors"
          .cell.grid-x.d-color-group
            h6.cell
              | #{name}
              hr.d-hr
            each tintGroup, name in colors
              .cell.grid-x.d-color-group
                h6.cell #{name[0].toUpperCase() + name.slice(1)}
                .cell.grid-x.small-up-3.medium-up-4.large-up-8.grid-margin-x.grid-margin-y
                  each colorSet in tintGroup
                    each hexCode,color in colorSet
                      .cell.d-color-box
                        .d-color-box__color(class="bg-"+color)
                        p.d-color-box__name #{color}
                        small.d-color-box__code.c-anchor-light-30 #{hexCode}
